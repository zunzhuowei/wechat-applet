<!--pages/menu/menu.wxml-->
<view class="page">
    <view class="page__hd">
        <view class="page__title">Grid</view>
        <view class="page__desc">九宫格</view>
    </view>
    <view class="page__bd">
        <view class="weui-grids"><!--  -->
            <block class="weui-grid" wx:for="{{menus}}" wx:key="item" wx:for-index="id">
                <view id="{{id}}" class="weui-grid" hover-class="weui-grid_active" bindtap="nav2Target">
                    <image class="weui-grid__icon" src="../../images/icon_tabbar.png"></image>
                    <view class="weui-grid__label">{{id}}</view>
                </view>
            </block>
        </view>
    </view>
</view>

<include  src="../../templates/footer/footer.wxml"></include>
